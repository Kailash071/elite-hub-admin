{% extends "layouts/admin.njk" %}

{% block title %}FAQs - {{ APP_NAME }}{% endblock %}

{% set pageTitle = "FAQs" %}
{% set breadcrumbActive = "FAQs" %}
{% set currentPage = "faq" %}

{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-3">
            <h5 class="mb-0">Frequently Asked Questions</h5>
            <select id="statusFilter" class="form-select form-select-sm w-auto">
                <option value="">All Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>
        <a href="/faqs/add" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> Add New FAQ
        </a>
    </div>

    <div class="card-datatable table-responsive">
        <table class="table table-hover" id="faqTable">
            <thead>
                <tr>
                    <th>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="selectAll">
                      </div>
                    </th>
                    <th>Question</th>
                    <th>Order</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Bulk Actions Modal -->
<div class="modal fade" id="bulkActionModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bulk Actions</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Select an action for <span id="selectedCount">0</span> selected FAQs:</p>
        <div class="d-grid gap-2">
          <button class="btn btn-outline-success" onclick="bulkAction('activate')">
            <i class="bx bx-check-circle me-1"></i> Activate Selected
          </button>
          <button class="btn btn-outline-secondary" onclick="bulkAction('deactivate')">
            <i class="bx bx-hide me-1"></i> Deactivate Selected
          </button>
          <button class="btn btn-outline-danger" onclick="bulkAction('delete')">
            <i class="bx bx-trash me-1"></i> Delete Selected
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block js %}
<script>
let faqTable;

document.addEventListener('DOMContentLoaded', function () {
    initDataTable();
    initBulkActions();
});

function initDataTable() {
    faqTable = $('#faqTable').DataTable({
        processing: true,
        serverSide: true,
        ajax: {
            url: '/faqs/datatable',
            type: 'POST',
            data: function(d) {
                d.status = $('#statusFilter').val();
            }
        },
        columns: [
            {
                data: '_id',
                orderable: false,
                searchable: false,
                render: function(data) {
                    return `<input type="checkbox" class="row-checkbox form-check-input" value="${data}">`;
                }
            },
            { 
                data: 'question', 
                name: 'question',
                render: function(data, type, row) {
                    return `<strong>${data}</strong>`;
                }
            },
            { data: 'sortOrder', name: 'sortOrder' },
            {
                data: 'isActive',
                name: 'isActive',
                render: function(data) {
                    return data ? 
                        '<span class="badge bg-label-success">Active</span>' : 
                        '<span class="badge bg-label-secondary">Inactive</span>';
                }
            },
            {
                data: null,
                orderable: false,
                searchable: false,
                render: function(data, type, row) {
                    return `
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/faqs/${row._id}/edit"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="toggleStatus('${row._id}', ${!row.isActive})">
                                    <i class="bx ${row.isActive ? 'bx-hide' : 'bx-show'} me-1"></i> ${row.isActive ? 'Deactivate' : 'Activate'}
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="javascript:void(0);" onclick="deleteFaq('${row._id}')"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                        </div>
                    `;
                }
            }
        ],
        dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>t<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
        order: [[2, 'asc']] // Sort by Order by default
    });

    $('#statusFilter').on('change', function () {
        faqTable.ajax.reload();
    });
}

function initBulkActions() {
    $('#selectAll').on('change', function() {
        $('.row-checkbox').prop('checked', $(this).prop('checked'));
        updateBulkButton();
    });

    $(document).on('change', '.row-checkbox', function() {
        updateBulkButton();
        const allChecked = $('.row-checkbox').length === $('.row-checkbox:checked').length;
        $('#selectAll').prop('checked', allChecked);
    });
}

function updateBulkButton() {
    const count = $('.row-checkbox:checked').length;
    $('#selectedCount').text(count);
    
    if (count > 0) {
        if ($('#bulkActionBtn').length === 0) {
             $('.card-header .d-flex').first().prepend(`
                <button id="bulkActionBtn" class="btn btn-outline-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#bulkActionModal">
                  <i class="bx bx-check-square"></i> Actions (${count})
                </button>
            `);
        } else {
            $('#bulkActionBtn').html(`<i class="bx bx-check-square"></i> Actions (${count})`);
        }
    } else {
        $('#bulkActionBtn').remove();
    }
}

function toggleStatus(id, newStatus) {
    fetch(`/faqs/${id}/toggle-status`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ isActive: newStatus })
    })
    .then(res => res.json())
    .then(data => {
        if (data.status) {
            faqTable.ajax.reload(null, false);
            Swal.fire('Success', data.message, 'success');
        } else {
            Swal.fire('Error', data.message || 'Failed to update status', 'error');
        }
    })
    .catch(() => {
        Swal.fire('Error', 'Something went wrong', 'error');
    });
}

function deleteFaq(id) {
    Swal.fire({
        title: 'Delete FAQ?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, delete it!'
    }).then(result => {
        if (result.isConfirmed) {
            fetch(`/faqs/${id}`, {
                method: 'DELETE'
            })
            .then(res => res.json())
            .then(data => {
                if (data.status) {
                    Swal.fire('Deleted!', data.message, 'success');
                    faqTable.ajax.reload();
                } else {
                    Swal.fire('Error!', data.message, 'error');
                }
            })
            .catch(err => Swal.fire('Error!', 'Something went wrong', 'error'));
        }
    });
}

function bulkAction(action) {
    const ids = $('.row-checkbox:checked').map(function() { return $(this).val(); }).get();
    if (ids.length === 0) return;

    $('#bulkActionModal').modal('hide');

    Swal.fire({
        title: 'Are you sure?',
        text: `You are about to ${action} ${ids.length} FAQs`,
        icon: action === 'delete' ? 'warning' : 'info',
        showCancelButton: true,
        confirmButtonText: `Yes, ${action} them!`
    }).then((result) => {
        if (result.isConfirmed) {
            fetch('/faqs/bulk-action', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action, ids })
            })
            .then(res => res.json())
            .then(data => {
                if (data.status) {
                    Swal.fire('Success!', data.message, 'success');
                    faqTable.ajax.reload();
                    $('#selectAll').prop('checked', false);
                    updateBulkButton();
                } else {
                    Swal.fire('Error!', data.message, 'error');
                }
            })
            .catch(err => Swal.fire('Error!', 'Something went wrong', 'error'));
        }
    });
}
</script>
{% endblock %}
