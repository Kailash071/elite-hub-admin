<!-- Address Form for Orders -->
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" 
                   class="form-control" 
                   name="{{ addressType }}Address[firstName]" 
                   value="{{ address.firstName if address else '' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" 
                   class="form-control" 
                   name="{{ addressType }}Address[lastName]" 
                   value="{{ address.lastName if address else '' }}"
                   required>
        </div>
    </div>
</div>

<div class="mb-3">
    <label class="form-label">Company (Optional)</label>
    <input type="text" 
           class="form-control" 
           name="{{ addressType }}Address[company]" 
           value="{{ address.company if address else '' }}">
</div>

<div class="mb-3">
    <label class="form-label">Address Line 1</label>
    <input type="text" 
           class="form-control" 
           name="{{ addressType }}Address[addressLine1]" 
           value="{{ address.addressLine1 if address else '' }}"
           required>
</div>

<div class="mb-3">
    <label class="form-label">Address Line 2 (Optional)</label>
    <input type="text" 
           class="form-control" 
           name="{{ addressType }}Address[addressLine2]" 
           value="{{ address.addressLine2 if address else '' }}">
</div>

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" 
                   class="form-control" 
                   name="{{ addressType }}Address[city]" 
                   value="{{ address.city if address else '' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">State</label>
            <input type="text" 
                   class="form-control" 
                   name="{{ addressType }}Address[state]" 
                   value="{{ address.state if address else '' }}"
                   required>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Postal Code</label>
            <input type="text" 
                   class="form-control" 
                   name="{{ addressType }}Address[postalCode]" 
                   value="{{ address.postalCode if address else '' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Country</label>
            <input type="text" 
                   class="form-control" 
                   name="{{ addressType }}Address[country]" 
                   value="{{ address.country if address else 'India' }}"
                   required>
        </div>
    </div>
</div>

<div class="mb-3">
    <label class="form-label">Phone (Optional)</label>
    <input type="tel" 
           class="form-control" 
           name="{{ addressType }}Address[phone]" 
           value="{{ address.phone if address else '' }}">
</div>
