{% extends "layouts/admin.njk" %}

{% block title %}Customers - {{ APP_NAME }}{% endblock %}

{% set pageTitle = "Customers" %}
{% set breadcrumbActive = "Customers" %}
{% set currentPage = "customers" %}

{% block content %}

<!-- Customers Table -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Customers Management</h5>
    <div class="d-flex gap-2">
      <button class="btn btn-outline-secondary btn-sm" onclick="refreshTable()">
        <i class="bx bx-refresh"></i> Refresh
      </button>
      <a href="/customers/add" class="btn btn-primary btn-sm">
        <i class="bx bx-plus"></i> Add Customer
      </a>
    </div>
  </div>
  <div class="card-body">
    <!-- Filters -->
    <div class="row mb-3">
      <div class="col-md-2">
        <label class="form-label">Status</label>
        <select class="form-select" id="filterStatus">
          <option value="">All Status</option>
          <option value="active">Active</option>
          <option value="inactive">Inactive</option>
          <option value="blocked">Blocked</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Verification</label>
        <select class="form-select" id="filterVerification">
          <option value="">All</option>
          <option value="verified">Verified</option>
          <option value="unverified">Unverified</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Membership</label>
        <select class="form-select" id="filterMembership">
          <option value="">All Tiers</option>
          <option value="bronze">Bronze</option>
          <option value="silver">Silver</option>
          <option value="gold">Gold</option>
          <option value="platinum">Platinum</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Registration</label>
        <select class="form-select" id="filterRegistration">
          <option value="">All Time</option>
          <option value="today">Today</option>
          <option value="week">This Week</option>
          <option value="month">This Month</option>
          <option value="year">This Year</option>
        </select>
      </div>
      <div class="col-md-1">
        <label class="form-label">&nbsp;</label>
        <div class="d-grid">
          <button class="btn btn-outline-primary" onclick="applyFilters()">Filter</button>
        </div>
      </div>
    </div>

    <!-- DataTable -->
    <div class="table-responsive">
      <table class="table table-hover" id="customersTable">
        <thead>
          <tr>
            <th>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="selectAll">
              </div>
            </th>
            <th>Customer</th>
            <th>Contact</th>
            <!-- <th>Orders</th>
            <th>Total Spent</th>
            <th>Membership</th> -->
            <th>Status</th>
            <th>Joined</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Bulk Actions Modal -->
<div class="modal fade" id="bulkActionModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bulk Actions</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Select an action for <span id="selectedCount">0</span> selected customers:</p>
        <div class="d-grid gap-2">
          <button class="btn btn-outline-success" onclick="bulkAction('activate')">
            <i class="bx bx-check-circle me-1"></i> Activate Selected
          </button>
          <button class="btn btn-outline-secondary" onclick="bulkAction('deactivate')">
            <i class="bx bx-hide me-1"></i> Deactivate Selected
          </button>
          <button class="btn btn-outline-warning" onclick="bulkAction('block')">
            <i class="bx bx-block me-1"></i> Block Selected
          </button>
          <button class="btn btn-outline-info" onclick="bulkAction('unblock')">
            <i class="bx bx-check me-1"></i> Unblock Selected
          </button>
          <button class="btn btn-outline-danger" onclick="bulkAction('delete')">
            <i class="bx bx-trash me-1"></i> Delete Selected
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Block Customer Modal -->
<div class="modal fade" id="blockCustomerModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Block Customer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Reason for blocking</label>
          <textarea class="form-control" id="blockReason" rows="3" placeholder="Enter reason for blocking this customer" required></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" onclick="confirmBlock()">Block Customer</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block js %}
<script>
let customersTable;
let blockingCustomerId = null;

document.addEventListener('DOMContentLoaded', function() {
  initializeDataTable();
  initializeEventListeners();
});

function initializeDataTable() {
  customersTable = $('#customersTable').DataTable({
    processing: true,
    serverSide: true,
    ajax: {
      url: '/customers/datatable',
      type: 'POST',
      data: function(d) {
        d.status = $('#filterStatus').val();
        d.verification = $('#filterVerification').val();
        d.membership = $('#filterMembership').val();
        d.registration = $('#filterRegistration').val();
      }
    },
    columns: [
      { 
        data: '_id', 
        orderable: false, 
        searchable: false,
        render: function(data) {
          return `<div class="form-check"><input class="form-check-input row-checkbox" type="checkbox" value="${data}"></div>`;
        }
      },
      { 
        data: 'firstName', 
        name: 'firstName',
        render: function(data, type, row) {
          const fullName = `${row.firstName} ${row.lastName}`;
          const initials = (row.firstName.charAt(0) + row.lastName.charAt(0)).toUpperCase();
          const verifiedIcon = row.emailVerified ? '<i class="bx bx-badge-check text-success ms-1" title="Email Verified"></i>' : '';
          return `<div class="d-flex align-items-center">
                    <div class="avatar avatar-sm me-3">
                      <span class="avatar-initial rounded bg-label-primary">${initials}</span>
                    </div>
                    <div>
                      <h6 class="mb-0">${fullName}</h6>
                      <small class="text-muted d-flex align-items-center">${row.email} ${verifiedIcon}</small>
                    </div>
                  </div>`;
        }
      },
      { 
        data: 'phone', 
        name: 'phone',
        render: function(data, type, row) {
          if (!data) return '<span class="text-muted">-</span>';
          const verifiedBadge = row.phoneVerified ? '<br><span class="badge bg-label-success">Phone Verified</span>' : '';
          return `<small class="d-block">${data}</small>${verifiedBadge}`;
        }
      },
      // { 
      //   data: 'totalOrders', 
      //   name: 'totalOrders',
      //   render: function(data) {
      //     return `<span class="badge bg-label-info">${data || 0} Orders</span>`;
      //   }
      // },
      // { 
      //   data: 'totalSpent', 
      //   name: 'totalSpent',
      //   render: function(data) {
      //     return `<strong>$${parseFloat(data || 0).toFixed(2)}</strong>`;
      //   }
      // },
      // { 
      //   data: 'membershipTier', 
      //   name: 'membershipTier',
      //   render: function(data) {
      //     const colors = { 'bronze': 'secondary', 'silver': 'info', 'gold': 'warning', 'platinum': 'warning' };
      //     const color = colors[data] || 'secondary';
      //     return `<span class="badge bg-label-${color}">${data ? data.charAt(0).toUpperCase() + data.slice(1) : 'Bronze'}</span>`;
      //   }
      // },
      { 
        data: 'isActive', // Using isActive as the primary data point for status column
        name: 'isActive',
        render: function(data, type, row) {
          if (row.isBlocked) {
            return `<span class="badge bg-label-danger">Blocked</span>`;
          } else if (row.isActive) {
            return `<span class="badge bg-label-success">Active</span>`;
          } else {
            return `<span class="badge bg-label-secondary">Inactive</span>`;
          }
        }
      },
      { 
        data: 'createdAt', 
        name: 'createdAt',
        render: function(data) {
           return new Date(data).toLocaleDateString();
        }
      },
      { 
        data: '_id', 
        orderable: false, 
        searchable: false,
        render: function(data, type, row) {
          const isBlocked = row.isBlocked;
          const isActive = row.isActive;
          const fullName = `${row.firstName} ${row.lastName}`;
          const id = row._id || data;
          
          if (!id) {
             console.error('Missing ID for row:', row);
             return '';
          }
          
          // Escape single quotes effectively for JS string context
          const safeName = fullName.replace(/'/g, "\\'");
          
          return `
            <div class="dropdown">
              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                <i class="bx bx-dots-vertical-rounded"></i>
              </button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="/customers/${id}">
                  <i class="bx bx-show me-1"></i> View Details
                </a>
                <a class="dropdown-item" href="/customers/${id}/edit">
                  <i class="bx bx-edit-alt me-1"></i> Edit
                </a>
                <div class="dropdown-divider"></div>
                ${isBlocked ? 
                  `<a class="dropdown-item" href="javascript:void(0);" onclick="toggleBlock('${id}', false)"><i class="bx bx-check me-1"></i> Unblock</a>` : 
                  `<a class="dropdown-item" href="javascript:void(0);" onclick="toggleBlock('${id}', true)"><i class="bx bx-block me-1"></i> Block</a>`
                }
                ${isActive ? 
                  `<a class="dropdown-item" href="javascript:void(0);" onclick="toggleStatus('${id}', false)"><i class="bx bx-hide me-1"></i> Deactivate</a>` : 
                  `<a class="dropdown-item" href="javascript:void(0);" onclick="toggleStatus('${id}', true)"><i class="bx bx-show me-1"></i> Activate</a>`
                }
                <div class="dropdown-divider"></div>
                <a class="dropdown-item text-danger" href="javascript:void(0);" onclick="deleteCustomer('${id}', '${safeName}')">
                  <i class="bx bx-trash me-1"></i> Delete
                </a>
              </div>
            </div>`;
        }
      }
    ],
    order: [[7, 'desc']],
    pageLength: 25,
    responsive: true
  });
}

function initializeEventListeners() {
  // Select all functionality
  $('#selectAll').on('change', function() {
    $('.row-checkbox').prop('checked', $(this).prop('checked'));
    updateBulkActionButton();
  });

  // Individual checkbox change
  $(document).on('change', '.row-checkbox', function() {
    updateBulkActionButton();
  });
}

function updateBulkActionButton() {
  const selectedCount = $('.row-checkbox:checked').length;
  $('#selectedCount').text(selectedCount);
  
  if (selectedCount > 0) {
    if (!$('#bulkActionBtn').length) {
      $('.card-header .d-flex').prepend(`
        <button id="bulkActionBtn" class="btn btn-outline-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#bulkActionModal">
          <i class="bx bx-check-square"></i> Actions (${selectedCount})
        </button>
      `);
    } else {
      $('#bulkActionBtn').html(`<i class="bx bx-check-square"></i> Actions (${selectedCount})`);
    }
  } else {
    $('#bulkActionBtn').remove();
  }
}

function applyFilters() {
  customersTable.ajax.reload();
}

function refreshTable() {
  customersTable.ajax.reload();
}


function toggleStatus(customerId, newStatus) {
  const action = newStatus ? 'activate' : 'deactivate';
  
  Swal.fire({
    title: `${action.charAt(0).toUpperCase() + action.slice(1)} Customer?`,
    text: `Are you sure you want to ${action} this customer?`,
    icon: 'question',
    showCancelButton: true,
    confirmButtonText: `Yes, ${action}!`,
    cancelButtonText: 'Cancel'
  }).then((result) => {
    if (result.isConfirmed) {
      fetch(`/customers/${customerId}/toggle-status`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({ isActive: newStatus })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          Swal.fire('Success!', data.message, 'success');
          customersTable.ajax.reload();
        } else {
          Swal.fire('Error!', data.message, 'error');
        }
      })
      .catch(error => {
        Swal.fire('Error!', 'Something went wrong', 'error');
      });
    }
  });
}

function toggleBlock(customerId, block) {
  if (block) {
    blockingCustomerId = customerId;
    $('#blockReason').val('');
    $('#blockCustomerModal').modal('show');
  } else {
    // Unblock customer
    Swal.fire({
      title: 'Unblock Customer?',
      text: 'Are you sure you want to unblock this customer?',
      icon: 'question',
      showCancelButton: true,
      confirmButtonText: 'Yes, unblock!',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.isConfirmed) {
        performBlock(customerId, false, '');
      }
    });
  }
}

function confirmBlock() {
  const reason = $('#blockReason').val().trim();
  
  if (!reason) {
    alert('Please provide a reason for blocking');
    return;
  }
  
  $('#blockCustomerModal').modal('hide');
  performBlock(blockingCustomerId, true, reason);
}

function performBlock(customerId, block, reason) {
  fetch(`/customers/${customerId}/toggle-block`, {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ 
      isBlocked: block,
      blockReason: reason 
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      Swal.fire('Success!', data.message, 'success');
      customersTable.ajax.reload();
    } else {
      Swal.fire('Error!', data.message, 'error');
    }
  })
  .catch(error => {
    Swal.fire('Error!', 'Something went wrong', 'error');
  });
}

function deleteCustomer(customerId, customerName) {
  if (!customerId) {
    console.error('Attempted to delete customer with no ID');
    Swal.fire('Error!', 'Invalid customer ID', 'error');
    return;
  }

  Swal.fire({
    title: 'Delete Customer?',
    text: `Are you sure you want to delete "${customerName}"? This will permanently remove all customer data including orders and addresses.`,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Yes, delete it!',
    cancelButtonText: 'Cancel',
    confirmButtonColor: '#d33'
  }).then((result) => {
    if (result.isConfirmed) {
      fetch(`/customers/${customerId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          Swal.fire('Deleted!', data.message, 'success');
          customersTable.ajax.reload();
        } else {
          Swal.fire('Error!', data.message, 'error');
        }
      })
      .catch(error => {
        console.error('Delete error:', error);
        Swal.fire('Error!', 'Something went wrong', 'error');
      });
    }
  });
}

function bulkAction(action) {
  const selectedIds = $('.row-checkbox:checked').map(function() {
    return $(this).val();
  }).get();

  if (selectedIds.length === 0) {
    $('#bulkActionModal').modal('hide');
    Swal.fire('Warning!', 'Please select at least one customer', 'warning');
    return;
  }

  const actionText = {
    activate: 'activate',
    deactivate: 'deactivate', 
    block: 'block',
    unblock: 'unblock',
    delete: 'delete'
  };
  $('#bulkActionModal').modal('hide');
  Swal.fire({
    title: `${actionText[action].charAt(0).toUpperCase() + actionText[action].slice(1)} Customers?`,
    text: `Are you sure you want to ${actionText[action]} ${selectedIds.length} selected customers?`,
    icon: action === 'delete' ? 'warning' : 'question',
    showCancelButton: true,
    confirmButtonText: `Yes, ${action}!`,
    cancelButtonText: 'Cancel',
    confirmButtonColor: action === 'delete' ? '#d33' : '#696cff'
  }).then((result) => {
    if (result.isConfirmed) {
      fetch('/customers/bulk-action', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          action: action,
          customerIds: selectedIds
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          Swal.fire('Success!', data.message, 'success');
          customersTable.ajax.reload();
          $('#bulkActionModal').modal('hide');
          $('.row-checkbox').prop('checked', false);
          $('#selectAll').prop('checked', false);
          updateBulkActionButton();
        } else {
          Swal.fire('Error!', data.message, 'error');
        }
      })
      .catch(error => {
        Swal.fire('Error!', 'Something went wrong', 'error');
      });
    }
  });
}
</script>
{% endblock %}
