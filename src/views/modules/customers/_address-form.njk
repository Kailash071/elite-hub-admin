<!-- Address Form Partial -->
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Address Type</label>
            <select class="form-select" name="addresses[{{ loop.index0 }}][type]">
                <option value="shipping" {{ 'selected' if address.type == 'shipping' }}>Shipping</option>
                <option value="billing" {{ 'selected' if address.type == 'billing' }}>Billing</option>
            </select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <div class="form-check form-switch">
                <input class="form-check-input" 
                       type="checkbox" 
                       name="addresses[{{ loop.index0 }}][isDefault]"
                       {{ 'checked' if address.isDefault }}>
                <label class="form-check-label">Default Address</label>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][firstName]" 
                   value="{{ address.firstName or '' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][lastName]" 
                   value="{{ address.lastName or '' }}"
                   required>
        </div>
    </div>
    <div class="col-12">
        <div class="mb-3">
            <label class="form-label">Company (Optional)</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][company]" 
                   value="{{ address.company or '' }}">
        </div>
    </div>
    <div class="col-12">
        <div class="mb-3">
            <label class="form-label">Address Line 1</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][addressLine1]" 
                   value="{{ address.addressLine1 or '' }}"
                   required>
        </div>
    </div>
    <div class="col-12">
        <div class="mb-3">
            <label class="form-label">Address Line 2 (Optional)</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][addressLine2]" 
                   value="{{ address.addressLine2 or '' }}">
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][city]" 
                   value="{{ address.city or '' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">State</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][state]" 
                   value="{{ address.state or '' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Postal Code</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][postalCode]" 
                   value="{{ address.postalCode or '' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Country</label>
            <input type="text" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][country]" 
                   value="{{ address.country or 'India' }}"
                   required>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Phone (Optional)</label>
            <input type="tel" 
                   class="form-control" 
                   name="addresses[{{ loop.index0 }}][phone]" 
                   value="{{ address.phone or '' }}">
        </div>
    </div>
</div>
