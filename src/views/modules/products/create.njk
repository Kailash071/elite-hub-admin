{% extends "layouts/admin.njk" %}

{% block title %}Add New Product - {{ APP_NAME }}{% endblock %}

{% block content %}
<!-- [ Main Content ] start -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add New Product</h5>
                <a href="/products" class="btn btn-secondary btn-sm">
                    <i class="ti ti-arrow-left me-1"></i>Back to List
                </a>
            </div>
            
            <form action="/products/add" method="POST" enctype="application/x-www-form-urlencoded" class="card-body">
                {% include "modules/products/form.njk" %}
                
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a href="/products" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="ti ti-check me-1"></i>Create Product
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->
{% endblock %}
