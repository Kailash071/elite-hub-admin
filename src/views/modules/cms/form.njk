{% extends "layouts/admin.njk" %}

{% block title %}{{ 'Edit Page' if page else 'Add Page' }} - {{ APP_NAME }}{% endblock %}

{% set pageTitle = title %}
{% set breadcrumbSection = "CMS Pages" %}
{% set breadcrumbSectionUrl = "/cms" %}
{% set breadcrumbActive = title %}
{% set currentPage = "cms" %}

{% block content %}
<form id="cmsForm" action="{{ '/cms/' + page._id if page else '/cms' }}" method="POST">

    <div class="row">
        <div class="col-md-9">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Page Content</h5>
                </div>
                <div class="card-body">

                    <!-- Title -->
                    <div class="mb-3">
                        <label class="form-label">Page Title <span class="text-danger">*</span></label>
                        <input
                            type="text"
                            class="form-control"
                            name="title"
                            value="{{ page.title if page }}"
                            required
                            maxlength="100">
                    </div>

                    <!-- Type -->
                    <div class="mb-3">
                        <label class="form-label">Page Type <span class="text-danger">*</span></label>
                        <select class="form-select" name="type" required {{ 'disabled' if page }}>
                            <option value="" disabled selected>Select Page Type</option>
                            <option value="privacy-policy" {{ 'selected' if page.type == 'privacy-policy' }}>Privacy Policy</option>
                            <option value="return-policy" {{ 'selected' if page.type == 'return-policy' }}>Return Policy</option>
                            <option value="shipping-policy" {{ 'selected' if page.type == 'shipping-policy' }}>Shipping Policy</option>
                            <option value="terms-conditions" {{ 'selected' if page.type == 'terms-conditions' }}>Terms & Conditions</option>
                            <option value="about-us" {{ 'selected' if page.type == 'about-us' }}>About Us</option>
                        </select>

                        {% if page %}
                        <input type="hidden" name="type" value="{{ page.type }}">
                        {% endif %}
                    </div>

                    <!-- Content -->
                    <div class="mb-3">
                        <label class="form-label">Content <span class="text-danger">*</span></label>
                        <textarea
                            class="form-control"
                            id="content"
                            name="content"
                            rows="15">{{ page.content if page }}</textarea>
                    </div>

                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Publish</h5>
                </div>
                <div class="card-body">

                    <div class="form-check form-switch mb-3">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            name="isActive"
                            {{ 'checked' if (page and page.isActive) or not page }}>
                        <label class="form-check-label">Active</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            {{ 'Update Page' if page else 'Create Page' }}
                        </button>
                        <a href="/cms" class="btn btn-outline-secondary">Cancel</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}

{% block js %}
<script>
document.addEventListener('DOMContentLoaded', function () {

    console.log('ClassicEditor:', typeof ClassicEditor);

    if (typeof ClassicEditor === 'undefined') {
        console.error('❌ CKEditor not loaded. Check admin.njk path.');
        return;
    }

    ClassicEditor
        .create(document.querySelector('#content'), {
            licenseKey: 'GPL'
        })
        .then(editor => {
            console.log('✅ CKEditor initialized');
        })
        .catch(error => {
            console.error('CKEditor error:', error);
        });

});
</script>
{% endblock %}
